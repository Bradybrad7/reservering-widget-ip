# Storage Backend Configuration
# Options: 'localStorage' | 'firestore'
# Default: localStorage (for development/testing)
VITE_STORAGE_BACKEND=localStorage

# Firebase Configuration (used when VITE_STORAGE_BACKEND=firestore)
# These values are already configured in src/firebase.ts
# No need to set them here unless you want to override

# Set to 'firestore' when ready to use Firebase in production
# VITE_STORAGE_BACKEND=firestore

# Email Configuration
# Force email sending in development mode (useful for testing)
# Default: false (emails are only logged to console in dev mode)
VITE_FORCE_EMAIL_IN_DEV=false

# Email Service Configuration (for Firebase Cloud Functions)
VITE_EMAIL_FROM=info@inspiration-point.nl
VITE_EMAIL_FROM_NAME=Inspiration Point Theater

# Firebase Cloud Functions URLs
VITE_SMTP_FUNCTION_URL=https://europe-west1-dinner-theater-booking.cloudfunctions.net/sendSmtpEmail

# Application URLs
# Base URL voor de applicatie (gebruikt voor admin action links in emails)
# Development: http://localhost:5173
# Production (Firebase Hosting): https://dinner-theater-booking.web.app
VITE_APP_BASE_URL=https://dinner-theater-booking.web.app
